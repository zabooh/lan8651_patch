+/* Enhanced debugfs interface for register access with comprehensive debugging */
+static ssize_t lan865x_debugfs_reg_read(struct file *file, char __user *user_buf,
+					size_t count, loff_t *ppos)
+{
+	struct lan865x_priv *priv = file->private_data;
+	char buf[512];
+	int len;
+	
+	/* Show usage and last operation result */
+	len = snprintf(buf, sizeof(buf),
+		"LAN865x Register Access Interface\n"
+		"=================================\n"
+		"Usage:\n"
+		"  echo 'read 0x10000' > reg_access      - Read register\n"
+		"  echo 'write 0x10000 0x0C' > reg_access - Write register\n"
+		"  echo 'debug on' > reg_access          - Enable debug output\n"
+		"  echo 'debug off' > reg_access         - Disable debug output\n"
+		"\n"
+		"Status:\n"
+		"  Debug: %s\n"
+		"  Last operation: 0x%08x = 0x%08x\n"
+		"  SPI device: %s\n"
+		"  Network interface: %s\n",
+		priv->debug_enabled ? "ON" : "OFF",
+		priv->last_reg_addr,
+		priv->last_reg_value,
+		priv->spi ? dev_name(&priv->spi->dev) : "NULL",
+		priv->netdev ? priv->netdev->name : "NULL");
+	
+	return simple_read_from_buffer(user_buf, count, ppos, buf, len);
+}
+
+static ssize_t lan865x_debugfs_reg_write(struct file *file, 
+					const char __user *user_buf,
+					size_t count, loff_t *ppos)
+{
+	struct lan865x_priv *priv = file->private_data;
+	char buf[128];
+	char cmd[16];
+	u32 address, value;
+	int ret;
+	ktime_t start_time, end_time;
+	s64 duration_us;
+	
+	if (count >= sizeof(buf))
+		return -EINVAL;
+	
+	if (copy_from_user(buf, user_buf, count))
+		return -EFAULT;
+	
+	buf[count] = '\0';
+	
+	/* Remove trailing newline */
+	if (count > 0 && buf[count-1] == '\n')
+		buf[count-1] = '\0';
+	
+	dev_info(&priv->spi->dev, "DEBUG: Received command: '%s'", buf);
+	
+	/* Handle debug control commands */
+	if (strncmp(buf, "debug ", 6) == 0) {
+		if (strstr(buf, "on")) {
+			priv->debug_enabled = true;
+			dev_info(&priv->spi->dev, "DEBUG: Debug output ENABLED");
+		} else if (strstr(buf, "off")) {
+			priv->debug_enabled = false;
+			dev_info(&priv->spi->dev, "DEBUG: Debug output DISABLED");
+		}
+		return count;
+	}
+	
+	/* Parse register access commands */
+	if (sscanf(buf, "%15s 0x%x 0x%x", cmd, &address, &value) == 3) {
+		if (strcmp(cmd, "write") == 0) {
+			if (priv->debug_enabled) {
+				dev_info(&priv->spi->dev, 
+					"DEBUG: Starting WRITE operation: addr=0x%08x, value=0x%08x", 
+					address, value);
+			}
+			
+			start_time = ktime_get();
+			
+			/* Write register via TC6 */
+			ret = oa_tc6_write_register(priv->tc6, address, value);
+			
+			end_time = ktime_get();
+			duration_us = ktime_to_us(ktime_sub(end_time, start_time));
+			
+			if (ret) {
+				dev_err(&priv->spi->dev, 
+					"ERROR: REG WRITE 0x%08x = 0x%08x FAILED (ret=%d, duration=%lld us)", 
+					address, value, ret, duration_us);
+				return ret;
+			}
+			
+			priv->last_reg_addr = address;
+			priv->last_reg_value = value;
+			
+			dev_info(&priv->spi->dev, "REG WRITE 0x%08x = 0x%08x (duration=%lld us)", 
+				address, value, duration_us);
+				
+			if (priv->debug_enabled) {
+				dev_info(&priv->spi->dev, 
+					"DEBUG: WRITE completed successfully in %lld microseconds", 
+					duration_us);
+			}
+		}
+	} else if (sscanf(buf, "%15s 0x%x", cmd, &address) == 2) {
+		if (strcmp(cmd, "read") == 0) {
+			if (priv->debug_enabled) {
+				dev_info(&priv->spi->dev, 
+					"DEBUG: Starting READ operation: addr=0x%08x", address);
+			}
+			
+			start_time = ktime_get();
+			
+			/* Read register via TC6 */
+			ret = oa_tc6_read_register(priv->tc6, address, &value);
+			
+			end_time = ktime_get();
+			duration_us = ktime_to_us(ktime_sub(end_time, start_time));
+			
+			if (ret) {
+				dev_err(&priv->spi->dev, 
+					"ERROR: REG READ 0x%08x FAILED (ret=%d, duration=%lld us)", 
+					address, ret, duration_us);
+				return ret;
+			}
+			
+			priv->last_reg_addr = address;
+			priv->last_reg_value = value;
+			
+			dev_info(&priv->spi->dev, "REG READ 0x%08x = 0x%08x (duration=%lld us)", 
+				address, value, duration_us);
+				
+			if (priv->debug_enabled) {
+				dev_info(&priv->spi->dev, 
+					"DEBUG: READ completed successfully in %lld microseconds", 
+					duration_us);
+			}
+		}
+	} else {
+		dev_warn(&priv->spi->dev, "Invalid command format: '%s'", buf);
+		dev_info(&priv->spi->dev, 
+			"Valid formats: 'read 0xADDR' or 'write 0xADDR 0xVALUE'");
+		return -EINVAL;
+	}
+	
+	return count;
+}
+
+static const struct file_operations lan865x_debugfs_reg_fops = {
+	.owner = THIS_MODULE,
+	.open = simple_open,
+	.read = lan865x_debugfs_reg_read,
+	.write = lan865x_debugfs_reg_write,
+};
